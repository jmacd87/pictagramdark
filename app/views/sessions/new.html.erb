
<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div id=”alert” style="text-align: center; color: white !important;"><%= alert %>
          </div>
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Log in</h2>
          </div>
          <%= simple_form_for :sessions, :url => sessions_path, :html => { :class => 'form-vertical' } do |f|%>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' } %>
              <br>
              <%= f.input :password, required: true, label: false, placeholder: 'Password', input_html: { class: 'input-lg' } %>
              <br>
              <%= f.button :submit, "Log in", class: 'btn-lg btn-info btn-block' %>
              <br>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>