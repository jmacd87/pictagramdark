<div id="comment">
<div class="user-name">
<%= link_to comment.user.user_name, profile_path(comment.user.user_name) %>
</div>
<div class="comment-content">
<%= comment.content %>
</div>
<% if current_user == nil %>
<% elsif comment.user == current_user or current_user.access_level == "superadmin" %>
<%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true do %>
<span class="glyphicon glyphicon-remove delete-comment"></span>

<%end%>
<%end%>
</div>