<!DOCTYPE html>
<html>
  <head>
    <title>Pictagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta charset='utf-8' />
    <meta name='viewport' content='initial-scale=1,maximum-scale=1,user-scalable=no' />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" integrity="sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu" crossorigin="anonymous">
  </head>

  <body>
<nav class="navbar navbar-default">
  <div class="navbar-container">
    <div class="navbar-header">
      <div class="navbar-brand">
        <%= link_to image_tag('pictagram.png'), posts_path %>
      </div>
      <ul class="nav navbar-nav navbar-right">
          <li>
            <% if session[:user_id]!= nil %>
            <%= render 'notifications/notification_dropdown' %>
            <%end%>
          </li>

          <div class= "w-100 mobile_view_hide">
                
                <li>
                  <% if session[:user_id]!= nil %>
                <%= link_to "New Post", new_post_path %>
                </li>
                <%end%>
                <li>
                <%= link_to "Browse Posts", browse_posts_path %>
                </li>
                <% if session[:user_id]== nil %>
                <li>
                <%= link_to "Login", login_path %>
                </li>
                <li>
                <%= link_to "Register", signup_path %>
                </li>
                <%else%>
                <li>
                <%= link_to "Logout", logout_path %>
                </li>
                <% end %> 
          </div>
      </ul>
    </div>
  </div>
</nav>


<div class="container">
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, class: [:alert, alert_for(name)] %>
  <% end %>
</div>
</div>
  <%= yield %>

  <footer>
    <div class="footer">
    <div class="w-100 desk_view_hide">
        <ul class="icons">
                        <li class="icons">
                          <%= link_to posts_path do %>
                                <i class="fas fa-home"></i>
                          <%end%>
                        </li>
                        <li class="icons">
                          <%= link_to browse_posts_path do %>
                            <i class="fas fa-search"></i>
                              
                          <%end%>
                        </li>
                         <li class="icons">
                          <%= link_to new_post_path do %>
                                <i class="far fa-plus-square"></i>
                          <%end%>
                        </li>

                        <%if current_user != nil %>
                        <li class="icons">
                            <%= link_to profile_path(current_user.user_name) do %>
                                <i class="fas fa-user-alt"></i>
                            <%end%>
                        </li>
                        <li class="icons">
                            <%= link_to logout_path do %>
                              <i class="fas fa-sign-out-alt"></i>
                            <%end%>
                        </li>
                        <%else%>
                          <li class="icons">
                            <%= link_to login_path do %>
                                <i class="fas fa-sign-in-alt"></i>
                                <%end%>
                          </li>
                          <li class="icons">
                            <%= link_to signup_path do %>
                                <i class="fas fa-user-plus"></i>
                                <%end%>
                          </li>

                        <%end%>
                    </ul>
      </div>
    </div>
</footer>
